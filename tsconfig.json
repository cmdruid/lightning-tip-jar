{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "components"
      ],
      "@hooks/*": [
        "hooks"
      ],
      "@pages/*": [
        "pages"
      ],
      "@api/*": [
        "pages/api"
      ],
      "@lib/*": [
        "lib"
      ]
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
    // "allowJs": true,
    //"checkJs": true
  },
  "include": [
    "./components/",
    "./pages/",
    "./lib/"
  ],
  "exclude": [
    "./lib/sparko.js"
  ]
}
